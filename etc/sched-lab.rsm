const SC_SLEEP = 1

fun main() {
  // SP = sub SP 64 // reserve 64B of stack memory

  // spawn new task
  tspawn foo

  // sleep os thread for 500ms
  R0 = 500000000
  syscall SC_SLEEP
}

fun foo() {
  R1 = 1
  // sleep os thread for 400ms
  R0 = 400000000
  syscall SC_SLEEP
}
